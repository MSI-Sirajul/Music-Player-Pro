<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_card_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="4dp"
    android:elevation="1dp">

    <!-- Thumbnail -->
    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_current_play"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_tonal_rounded"
        android:clipToOutline="true"/>

    <!-- Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="15sp"
            android:textStyle="bold"
            android:singleLine="true"/>

        <!-- Artist & Folder Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/songArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:singleLine="true"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
                
            <TextView
                android:id="@+id/songFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folder"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Playing Indicator -->
    <ImageView
        android:id="@+id/playingIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_notification"
        android:visibility="gone"
        android:padding="6dp"
        android:background="@drawable/bg_playing_indicator" 
        android:tint="@color/md_theme_primary"
        android:layout_marginLeft="8dp"/>

</LinearLayout>
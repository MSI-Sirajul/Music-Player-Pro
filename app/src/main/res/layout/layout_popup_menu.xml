<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_menu_popup"
    android:paddingVertical="8dp"
    android:elevation="8dp"
    android:minWidth="180dp"> <!-- কম্প্যাক্ট সাইজ -->
    
    
    <LinearLayout
        android:id="@+id/actionEqualizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_equalizer"
            android:tint="@color/md_theme_onSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equalizer"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/actionSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_sort"
            android:tint="@color/md_theme_onSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short ↑↓"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <!-- 1. CHANGE THEME -->
    <LinearLayout
        android:id="@+id/actionTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_theme"
            android:tint="@color/md_theme_onSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <!-- 2. SHARE APP -->
    <LinearLayout
        android:id="@+id/actionShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_share"
            android:tint="@color/md_theme_onSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share App"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

    <!-- 3. ABOUT -->
    <LinearLayout
        android:id="@+id/actionAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_info"
            android:tint="@color/md_theme_onSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dev. Info"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

</LinearLayout>
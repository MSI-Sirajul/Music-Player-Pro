<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_menu_popup"
    android:padding="@dimen/_18sdp"
    android:gravity="center">

    <!-- Developer Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MD Sirajul Islam"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Username -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@MSI-Sirajul"
        android:textColor="@color/md_theme_primary"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="4dp"
        android:gravity="center"/>

    <!-- App Version -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/_8ssp"
        android:layout_marginTop="2dp"
        android:gravity="center"/>

    <!-- NEW: Device Info Section -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="#10808080"
        android:padding="@dimen/_4sdp"
        android:stretchColumns="2">

        <!-- Row 1: Brand -->
        <TableRow>
            <TextView
                android:text="Device Brand"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingRight="8dp"/>
            <TextView
                android:text=":"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/infoBrand"
                android:text="Loading..."
                android:textColor="@color/md_theme_onSurface"
                android:textSize="@dimen/_10ssp"
                android:paddingLeft="8dp"/>
        </TableRow>

        <!-- Row 2: Model -->
        <TableRow android:layout_marginTop="4dp">
            <TextView
                android:text="Device Model"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingRight="8dp"/>
            <TextView
                android:text=":"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/infoModel"
                android:text="Loading..."
                android:textColor="@color/md_theme_onSurface"
                android:textSize="@dimen/_10ssp"
                android:paddingLeft="8dp"/>
        </TableRow>
        <!-- Row 4: Build ID -->
        <TableRow android:layout_marginTop="4dp">
            <TextView
                android:text="Build Number"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                android:gravity="right"
                android:paddingRight="8dp"/>
            <TextView
                android:text=":"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/infoBuild"
                android:text="Loading..."
                android:textColor="@color/md_theme_onSurface"
                android:textSize="@dimen/_10ssp"
                android:paddingLeft="8dp"/>
        </TableRow>        
        <!-- Row 3: Android Version -->
        <TableRow android:layout_marginTop="4dp">
            <TextView
                android:text="Android Ver"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                android:gravity="right"
                android:paddingRight="8dp"/>
            <TextView
                android:text=":"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/infoAndroid"
                android:text="Loading..."
                android:textColor="@color/md_theme_onSurface"
                android:textSize="@dimen/_10ssp"
                android:paddingLeft="8dp"/>
        </TableRow>
             
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#20808080"
        android:layout_marginVertical="@dimen/_10sdp"/>

    <!-- Social Icons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/_2sdp">

        <ImageButton
            android:id="@+id/btnWeb"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_web"
            android:background="@drawable/bg_button_rounded"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:tint="@color/md_theme_onSurface"
            android:layout_marginEnd="13dp"/>

        <ImageButton
            android:id="@+id/btnTelegram"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_telegram"
            android:background="@drawable/bg_button_rounded"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:tint="#0088cc" 
            android:layout_marginEnd="13dp"/>

        <ImageButton
            android:id="@+id/btnGithub"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_github"
            android:background="@drawable/bg_button_rounded"
            android:padding="8dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <!-- Close Button -->
    <Button
        android:id="@+id/btnCloseAbout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Close"
        android:textColor="#FF5555"
        android:background="@drawable/bg_menu_popup"
        android:textStyle="bold"/>

</LinearLayout>
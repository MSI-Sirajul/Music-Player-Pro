<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Main Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_menu_popup"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="2dp"> <!-- প্যাডিং কমানো হয়েছে -->

        <!-- 1. HEADER (Compact Size: 45dp) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingHorizontal="12dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now Playing Queue"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="14sp" 
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

            <!-- Scroll Button (Right Side) -->
            <ImageButton
                android:id="@+id/btnScrollToCurrent"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_notification"
                android:background="@drawable/bg_button_rounded"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- DIVIDER 1 (Below Header) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#20808080"
            android:layout_marginHorizontal="4dp"/>

        <!-- 2. SONG LIST (Takes all available space) -->
        <ListView
            android:id="@+id/queueListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#15808080"
            android:dividerHeight="1dp"
            android:paddingHorizontal="4dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
            android:scrollbarSize="3dp"/>

        <!-- DIVIDER 2 (Above Close Button) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#20808080"
            android:layout_marginHorizontal="4dp"/>

        <!-- 3. CLOSE BUTTON (Compact Size: 40dp) -->
        <Button
            android:id="@+id/btnCloseQueue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_menu_popup"
            android:text="CLOSE"
            android:textColor="#ff5555"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

    </LinearLayout>

</FrameLayout>
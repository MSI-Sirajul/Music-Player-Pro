<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- State: Selected (Active Tab) -->
    <!-- এটি এখন একটি হালকা ট্রান্সপারেন্ট কালার দেখাবে -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_bg_selected"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- State: Pressed (Touch Feedback) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#10808080"/> <!-- খুব হালকা গ্রে শ্যাডো -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- State: Default (Inactive) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
</selector>